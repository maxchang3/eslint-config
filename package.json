{
  "name": "@maxchang/eslint-config",
  "type": "module",
  "version": "1.0.16",
  "packageManager": "pnpm@10.6.3",
  "description": "Max Chang's ESLint config",
  "author": "Max Chang <maxcfoo@gmail.com> (https://github.com/maxchang3/)",
  "license": "MIT",
  "homepage": "https://github.com/maxchang3/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "watch": "tsup --format esm,cjs --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp && pnpm build && pnpm publish --access public",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "^9.11.0",
    "eslint-plugin-format": ">=0.1.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.6.0",
    "local-pkg": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "bumpp": "^10.0.3",
    "eslint-plugin-format": "^1.0.1",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
